@model ContactoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        Editar contacto
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">
            <input asp-for="Nombre" type="hidden" class="form-control">

          <div class="alert alert-danger" role="alert">
              ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Nombre)?
          </div>
            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>