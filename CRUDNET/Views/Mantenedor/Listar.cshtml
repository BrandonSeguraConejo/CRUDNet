@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista contacto
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-contdoller="Mantenedor" class="btn-success">Nuevo contacto</a>
    <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>    
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>  <a asp-action="Editar" asp-contdoller="Mantenedor" class="btn-primary btn-sm" asp-route-IdContacto="@item.IdContacto">Editar</a></td>
                        <td><a asp-action="Eliminar" asp-contdoller="Mantenedor" class="btn-danger btn-sm" asp-route-IdContacto="@item.IdContacto">Eliminar</a></td>
                    </tr>
                }
            </tbody>

        </table>

      
    </div>
</div>

